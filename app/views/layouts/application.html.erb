<!DOCTYPE html>
<html>
  <head>
    <title>ControlApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-image: url(<%= asset_path 'icecream.jpg' %>);">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="<%= icecreams_path %>">Ice Cream Orders<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= new_icecream_path %>">New Order</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <div class="icforms">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
